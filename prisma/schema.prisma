generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  nome      String?
  sobrenome String?
  email     String  @unique()
  senha     String

  perfil    Profile @relation(fields: [profileId], references: [id])
  profileId Int
}

model Profile {
  id          Int    @id @default(autoincrement())
  Description String
  User        User[]
}

