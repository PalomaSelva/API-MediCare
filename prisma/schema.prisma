generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  nome      String?
  sobrenome String?
  email     String  @unique()
  senha     String

  perfil    Perfil @relation(fields: [perfil_id], references: [id])
  perfil_id Int
}

model Perfil {
  id        Int    @id @default(autoincrement())
  descricao String
  User      User[]
}

model Especialidade {
  id        Int    @id @default(autoincrement())
  descricao String
}

